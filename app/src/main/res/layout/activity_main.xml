<?xml version="1.0" encoding="utf-8"?>
<!-- Este bloque define un contenedor principal tipo RelativeLayout.
     - Se establecen los espacios de nombres (xmlns) necesarios para Android,
       atributos personalizados (app) y herramientas de diseÃ±o (tools).
     - El contenedor ocuparÃ¡ todo el ancho y alto de la pantalla (match_parent).
     - Se establece un color de fondo blanco (#FFFFFF). -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Contenedor principal -->
    <!-- Este bloque define un contenedor principal tipo LinearLayout
     que ocupa todo el ancho y alto de la pantalla (match_parent en ambos).
     Los elementos hijos se organizarÃ¡n de forma vertical (uno debajo del otro)
     y el fondo del contenedor serÃ¡ blanco (#FFFFFF). -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- ðŸ”¹ Barra superior morada: contenedor principal tipo RelativeLayout
     que ocupa todo el ancho de la pantalla, 60dp de alto y con fondo morado (#6A1B9A). -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#6A1B9A">

            <!-- ðŸ“Œ Logo: un ImageView de 40dp x 40dp, alineado a la izquierda con un margen de 12dp
                 y centrado verticalmente. La imagen proviene de @drawable/ic_logo. -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_logo" />

            <!-- ðŸ“Œ Texto centrado: un TextView con el tÃ­tulo "Juntos", color blanco,
                 tamaÃ±o 20sp en negrita y ubicado en el centro del RelativeLayout. -->
            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Juntos"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- ðŸ“Œ Foto de perfil: un CircleImageView de 50dp x 50dp, alineado a la derecha
                 con margen de 12dp, centrado verticalmente. La imagen proviene de @drawable/ic_perfil
                 y tiene un borde blanco de 2dp. -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPerfil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_perfil"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"/>
        </RelativeLayout>


        <!-- ðŸ”¹ Calendario ocupa todo el espacio disponible -->
        <!-- ðŸ”¹ Calendario: un MaterialCalendarView que se expande y ocupa
     todo el espacio disponible dentro del LinearLayout.
     - Ancho: match_parent (ocupa todo el ancho).
     - Alto: 0dp con layout_weight=1 (esto hace que el calendario crezca y llene
       proporcionalmente el espacio libre del contenedor).
     - mcv_showOtherDates="all" muestra los dÃ­as de otros meses en el calendario.
     - mcv_selectionColor="#2196F3" define el color azul (#2196F3)
       para resaltar la selecciÃ³n de fechas. -->
        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/materialCalendarView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:mcv_showOtherDates="all"
            app:mcv_selectionColor="#2196F3"/>
    </LinearLayout>

    <!-- ðŸ”¹ Barra inferior personalizada -->
    <!-- ðŸ”¹ Barra inferior personalizada: LinearLayout que funciona como una barra de navegaciÃ³n inferior.
     - ID: @+id/bottomNavigation para identificarlo en el cÃ³digo.
     - Ancho: match_parent (ocupa todo el ancho de la pantalla).
     - Alto: 70dp (altura fija de la barra).
     - layout_alignParentBottom="true": se ubica pegado en la parte inferior del contenedor padre.
     - orientation="horizontal": los elementos dentro se organizarÃ¡n de forma horizontal (uno al lado del otro).
     - weightSum="3": divide el espacio en 3 partes iguales (Ãºtil si se colocan 3 botones o Ã­conos).
     - background="#F5F5F5": color gris claro como fondo de la barra.
     - padding="10dp": agrega espacio interno alrededor de los elementos. -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="#F5F5F5"
        android:padding="10dp">

        <!-- Bienestar -->
        <!-- ðŸ”¹ SecciÃ³n "Bienestar": LinearLayout que representa un botÃ³n dentro de la barra inferior.
     - Ancho: 0dp con layout_weight=1 â†’ ocupa 1/3 del espacio horizontal.
     - Alto: match_parent â†’ se ajusta a la altura de la barra inferior.
     - orientation="vertical": organiza sus elementos de arriba hacia abajo.
     - gravity="center": centra el contenido en el espacio disponible.
     Dentro contiene:
        â€¢ Un ImageView (35dp x 35dp) con el Ã­cono @drawable/ic_bienestar.
        â€¢ Un TextView con el texto "Bienestar", tamaÃ±o de letra 13sp. -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconBienestar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_bienestar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienestar"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- ðŸ”¹ SecciÃ³n "Casa": LinearLayout que representa un botÃ³n en la barra inferior.
             - Ancho: 0dp con layout_weight=1 â†’ ocupa 1/3 del espacio horizontal.
             - Alto: match_parent â†’ ajusta la altura completa de la barra.
             - orientation="vertical": coloca el icono arriba y el texto abajo.
             - gravity="center": centra los elementos en el espacio disponible.
             Contiene:
                â€¢ Un ImageView (40dp x 40dp) con el Ã­cono @drawable/ic_home.
                â€¢ Un TextView con el texto "Inicio", tamaÃ±o 13sp. -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- ðŸ”¹ SecciÃ³n "Perfil": LinearLayout que representa otro botÃ³n en la barra inferior.
             - Ancho: 0dp con layout_weight=1 â†’ ocupa 1/3 del espacio horizontal.
             - Alto: match_parent â†’ llena la altura completa.
             - orientation="vertical": coloca el icono arriba y el texto abajo.
             - gravity="center": alinea ambos elementos en el centro.
             Contiene:
                â€¢ Un ImageView (35dp x 35dp) con el Ã­cono @drawable/ic_per.
                â€¢ Un TextView con el texto "Perfil", tamaÃ±o 13sp. -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconPerfil"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_per" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
